#!/usr/bin/env bash

set -e

banner="
                   _               __ _      _          _               
 _ __   ___  _ __ | |_ ___        / _(_) ___| |__   ___(_)_ __ ___  ___ 
| '_ \ / _ \| '_ \| __/ _ \ _____| |_| |/ __| '_ \ / _ \ | '__/ _ \/ __|
| |_) | (_) | | | | || (_) |_____|  _| | (__| | | |  __/ | | | (_) \__ \
| .__/ \___/|_| |_|\__\___/      |_| |_|\___|_| |_|\___|_|_|  \___/|___/
|_|                                                                     


   
A one-click install script to configure my working environment.

Run this script anytime over the Internet: wget -qO- \"https://raw.githubusercontent.com/freitzzz/ponto-ficheiros/master/INSTALL\" | bash
"

echo "$banner"

if [ ! -d .git ] || [ ! -f INSTALL ];
then
    sudo apt-get update
    sudo apt-get install git
    sudo git clone https://github.com/freitzzz/ponto-ficheiros

    cd ponto-ficheiros
fi

shopt -s expand_aliases

INSTALL_ORDER=(
    .aliases
    .sdks
    .tools
    .git-config
)

for install in ${INSTALL_ORDER[*]} 
do
    echo "> $install"

    $install/INSTALL
done

echo "ยบ All done! Your work environment is now tuned."