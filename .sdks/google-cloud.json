{
  "$schema": "../modules-schema.json",
  "name": "google-cloud",
  "type": "sdk",
  "commands": [
    {
      "type": "wget",
      "url": "https://dl.google.com/dl/cloudsdk/channels/rapid/downloads/google-cloud-cli-451.0.1-linux-x86_64.tar.gz"
    },
    {
      "type": "tar",
      "target": "~/Documents/SDK/google-cloud-sdk",
      "export": true,
      "exportFolder": "~/Documents/SDK/google-cloud-sdk/bin"
    },
    {
      "type": "bash",
      "source": [
        "~/Documents/SDK/google-cloud-sdk/install.sh",
        "~/Documents/SDK/google-cloud-sdk/bin/gcloud init"
      ]
    }
  ]
}