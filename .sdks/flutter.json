{
  "$schema": "../modules-schema.json",
  "name": "flutter",
  "type": "sdk",
  "dependencies": [
    {
      "type": "sdk",
      "name": "android"
    },
    {
      "type": "sdk",
      "name": "open-jdk"
    }
  ],
  "commands": [
    {
      "type": "rm",
      "target": "~/Documents/SDK/flutter"
    },
    {
      "type": "wget",
      "url": "https://storage.googleapis.com/flutter_infra_release/releases/stable/linux/flutter_linux_3.7.9-stable.tar.xz"
    },
    {
      "type": "tar",
      "extract": [
        "flutter"
      ],
      "target": "~/Documents/SDK/flutter",
      "exportFolder": "~/Documents/SDK/flutter/bin",
      "export": true
    },
    {
      "type": "bash",
      "source": [
        "source ~/.profile",
        "flutter config --no-analytics",
        "dart --disable-analytics",
        "flutter config --android-sdk=$ANDROID_SDK_ROOT",
        "yes | flutter doctor --android-licenses"
      ]
    }
  ]
}