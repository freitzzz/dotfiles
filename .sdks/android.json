{
    "$schema": "../modules-schema.json",
    "name": "android",
    "type": "sdk",
    "commands": [
        {
            "type": "unzip",
            "url": "https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip",
            "extract": [
                "cmdline-tools"
            ],
            "target": "$target/cmdline-tools"
        },
        {
            "type": "bash",
            "source": [
                "sdkmanager=\"$$target/cmdline-tools/bin/sdkmanager\"",
                "yes | $sdkmanager \"platform-tools\" \"platforms;android-31\" --sdk_root=\"$$target\"",
                "yes | $sdkmanager \"platform-tools\" \"emulator\" --sdk_root=\"$$target\"",
                "yes | $sdkmanager --licenses",
                "echo \"export ANDROID_SDK_ROOT=$$target\" >> ~/.profile",
                "echo \"export ANDROID_CMDLINE_TOOLS_ROOT=$$target/cmdline-tools\" >> ~/.profile",
                "echo \"export ANDROID_EMULATOR_ROOT=$$target/emulator\" >> ~/.profile",
                "echo \"export ANDROID_EMULATOR_WAIT_TIME_BEFORE_KILL=5\" >> ~/.profile"
            ]
        }
    ]
}