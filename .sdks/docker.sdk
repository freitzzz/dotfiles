#!/usr/bin/env bash

set -x

if [ $DOCKER_INSTALLED ];
then
    echo "Docker is already installed."

    return 0
fi

wget -qO- https://gist.githubusercontent.com/freitzzz/180dc45ad110fac3f12124abffd16fdf/raw/docker_install.bash | bash

echo "# Docker" >> ~/.profile

echo "export DOCKER_INSTALLED=1" >> ~/.profile